--- component: sector list component ---

<section id="sector-list-section" class="bg-white">
    <div class="sector-list">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>{{heading}}</h1>
                </div>
            </div>
            <div class="row">
                {{#each items}}
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 text-center">
                      <div class="sector-card">
                        <div class="icon"><img src="{{logo.url}}" alt="{{logo.alt}}"/></div>
                        <h2>{{title}}</h2>
                        <div class="content">{{{description}}}</div>
                        <ul class="sector-list-products">
                            {{#each products}}
                                <li><strong>{{this}}</strong></li>
                            {{/each}}
                        </ul>
                        <div class="btn-container">
                            <a class="btn btn-default btn-block" href="{{cta.link}}" role="button">{{cta.label}}</a>
                        </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            <div class="row show-more-btn-container text-center">
                <a id="showMoreSectors" class="center-block" href="#" role="button"><i class="glyphicon glyphicon-plus-sign"></i></br>View all</a>
            </div>
        </div>
    </div>
</section>
