---
component: cards
---
<div class="component cards informa-layout-col-4">
    <div class="component-content clearfix">
        <div class="row">
        {{#each this}}
            <div class="col-sm-4">
                <div class="card">
                    <h3 class="title">{{title}}</h3>
                    <span class="description">{{{description}}}</span>
                </div>
            </div>
        {{/each}}
        </div>
    </div>
</div>
