<div class="component informa-slider static-carousel informa-layout-col-{{column}}">
	<div class="component-content">
        <div class="slider informa-slides" data-slider-infinite="true" data-slidesToShow="3" data-slidesToScroll="3">
    {{#each slides}}
            <div class="slide slide-promo">
				<div class="slide-content">
	                <h3 class="slide-promo-title">{{title}}</h3>
	                <div class="slide-promo-description">{{description}}</div>
	                <div class="slide-promo-button">
                        <a href={{target}}><button type="button" class="btn">Read More</button></a>
                    </div>
                </div>
            </div>
    {{/each}}
        </div>
</div>
</div>
<script type="text/javascript">
    INFORMA.addModule("Carousel", ".informa-slides");
</script>
