<header id="informa-main-header">
<section class="informaTop">
      <div class="container">
            <div class="row">
                  <div class="col-xs-12">
                        <div class="informa-select">Informa</div>
                  </div>
            </div>
      </div>
</section>
<section class="logoSection">
      <div class="container">
            <div class="row">
                  <div class="col-xs-12">
                        <div class="logo">
                              <img src="cms-images/logo.png">
                        </div>
                        <div class="login">
                              Log in
                        </div>
                  </div>
            </div>
      </div>
</section>
<nav id="mainNavigation" class="navbar-default">
      <div class="container">
            <div class="row">
                  <div class="col-xs-12 col-md-9 navigation-primary">
                        <ul class="nav navbar-nav">
                              <li><a href="#">Sectors & Products</a></li>
                              <li><a href="#">Services</a></li>
                              <li><a href="#">Free Content</a></li>
                              <li><a href="#">About Us</a></li>
                              <li><a href="#">Support Us</a></li>
                              
                        </ul>
                  </div>
                  <div class="col-xs-12 col-md-3 hidden-sm mainCTA">
                        <ul class="nav">
                              <li class="touch"><a href="#">Get in touch</a></li>
                              <li class="search"><a href="#">Search<span class="icon icon-search"></a></li>
                        </ul>
                  </div>
            </div>
      </div>
      <div id="product-finder-section" class="product-finder" data-product="true">
      	<div class="container">
      		<div class="row">
             <div class="col-xs-12">
                  <form class="form" method="post" action="#">
                  <fieldset>
                        <legend>Product Finder</legend>
                        <ul class="search-options">
                              <li>
                                    <span class="custom-radio">
	                                    <label for="ProductSearch" class="label">
	                                          <input type="radio" class="custom-radio" name="ProductFinder" id="ProductSearch" checked="checked" data-show="sector-search" value="productsearch" />
	                                          <span>Search for a product</span>
	                                    </label>
                                    </span>
                                    <span class="custom-radio">
                                    <label for="SiteSearch" class="label">
                                          <input type="radio" class="custom-radio" name="ProductFinder" id="SiteSearch" data-show="site-search" value="sitesearch" />
                                          <span>Search site</span>
                                    </label>
                              </span>
                              </li>
                              <li>
                                    <a href="#" class="close-finder"><span class="icon-close"></span></a>
                              </li>
                        </ul>
                        <ul class="sector-search searchToggle">
                        	    <li class="menu">
                        	    	<label for="sector-list" class="label-text">Sector:</label>
                        	    	<div class="custom-multiselect">
                        	    		<select id="sector-list" name="sectors" class="sector-list" multiple="multiple" data-placeholder="Please Select">
                  				    <option value="sector1">Sector 1</option>
                  				    <option value="sector2">Sector 2</option>
                  				    <option value="sector3">Sector 3</option>
                  				    <option value="sector4">Sector 4</option>
                  				    <option value="sector5">Sector 5</option>
                  				    <option value="sector6">Sector 6</option>
						      </select>
                        	    	</div>
                              </li>
                              <li class="menu disabled">
                              <label for="sub-sector-list" class="label-text">Sub Sector:</label>
                        	    <div class="custom-multiselect">
                        	    		<select id="sub-sector-list" name="subsectors" class="sub-sector-list" disabled="disabled" multiple="multiple" data-placeholder="Please Select">
							    <option value="subsector1">Sub Sector 1</option>
							    <option value="subsector2">Sub Sector 2</option>
							    <option value="subsector3">Sub Sector 3</option>
							    <option value="subsector4">Sub Sector 4</option>
							    <option value="subsector5">Sub Sector 5</option>
							    <option value="subsector6">Sub Sector 6</option>
						      </select>
                        	    	</div>
                              </li>
                              <li class="menu button disabled">
                                    <button type="submit" class="btn btn-default" data-submit="sector-search">Go</button>
                              </li>
                        </ul>
                        <ul class="site-search searchToggle">
                        	<li class="menu">
                        		<div class="textbox">
                        			<label for="searchField">
                        			<input type="text" placeholder="Please Enter Search Text" id="searchField" name="searchtext" />
                        			</label>
                        		</div>
                        	</li>
                        	<li class="button disabled">
                             <button type="submit" class="btn btn-default" data-submit="sector-search">Go</button>
                              </li>
                        </ul>
                  </fieldset>
                  </form>
            </div>
            </div>
         	</div>
      </div>
</nav>
</header>
