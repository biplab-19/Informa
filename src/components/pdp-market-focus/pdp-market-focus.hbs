---
component: pdp-feature-list
---
<section id="market-focus">
    <div class="container">
        <div class="row headline">
            <div class="col-xs-12">
                <h1 class="dark">Market Focus</h1>
            </div>
        </div>
        <div class="row">
            {{#each this}}
                <div class="market-list-wrapper col-xs-12 col-sm-6 col-md-3">
                    <div class="market-list">
                        <div class="abs-image"><img src="/images/market-focus/{{image}}"></div>
                        <h2>{{title}}</h2>
                        <p>{{description}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
