<div class="informa-full-video-component">
  {{#each videos}}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center">
                <div class="video-full-container">
                  <div class="embed-responsive embed-responsive-16by9 hide-controls" >
                        <img src="cms-images/video-img/video-thumb.png" data-videotype="{{type}}" data-videourl="{{url}}" alt="{{details}}" data-videocontrol="{{playercontrol}}" data-videoautoplay="{{playerautoplay}}" width="100%" class="video-img img-responsive" />
                        <span class="play-icon"></span>
                        <h1>{{title}}</h1>
                  </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>