<div class="informa-video-mini-component">
    {{#each videos}}
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <div class="video-mini-container">
                        <div class="embed-responsive embed-responsive-16by9">
                            <img src="cms-images/video-img/video-thumb.png" data-videotype="{{type}}" data-videourl="{{url}}" alt="{{details}}" width="100%" class="video-img img-responsive" />
                            <span class="play-icon"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 text-left">
                    <p>{{desc}}</p>
                </div>
            </div>
        </div>
    {{/each}}
</div>
