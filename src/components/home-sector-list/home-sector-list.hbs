--- component: sector list component ---

<section id="sector-list-section" class="bg-white">
    <div class="sector-list">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>{{heading}}</h1>
                </div>
            </div>
            <div class="row card-col-row">
                {{#each items}}
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 text-center pull-left card-col">
                        <div class="sector-card">
                            <div class="icon"><img src="{{logo.url}}" alt="{{logo.alt}}" /></div>
                            <h2>{{title}}</h2>
                            <div class="content">
                                <p>{{{description}}}</p>
                            </div>
                            <ul class="sector-list-products">
                                {{#each products}}
                                    <li>{{this}}</li>
                                {{/each}}
                            </ul>

                        </div>
                        <div class="btn-container">
                            <a class="btn btn-default btn-block" href="{{cta.link}}" role="button">{{cta.label}}</a>
                        </div>
                    </div>
                {{/each}}
            </div>
            <div class="row view-all-sectors-btn-container">
                <span class="center-block view-all-sectors-btn text-center" role="button">View all</br><i class="informa-icon glyphicon glyphicon-plus-sign"></i></span>
            </div>
        </div>
    </div>
</section>
