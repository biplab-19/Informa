--- component: sector list component ---
<section id="dynamic-product-list" class="bg-gray-dark" data-count="3">
    <div class="product-brands-list">
        <div class="container">
                <h2> Featured products</h2>
            <div class="row">
                {{#each data}}
                    {{!-- <div class="col-xs-12 card-col-heading">
                        {{#if heading}}
                            <h2>{{heading}}</h2>
                        {{/if}}
                        <h3>{{sub-heading}}</h3>
                    </div> --}}
                    {{#each items}}
                        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 pull-left card-col">
                            <div class="card">
                                <div class="image-thumbnail">
                                    <img src="{{banner.url}}" width="100%" height="225" alt="{{banner.alt}}">
                                </div>
                                <div class="caption">
                                    <h4>{{title}}<span class="informa-icon brand-icon"></span></h4>
                                    <p>{{{description}}}</p>
                                </div>
                                <div class="showmore bg-light-blue">
                                    <div class="btn-container">
                                        <a class="btn btn-primary pull-right" href="{{cta.link}}" role="button">{{cta.label}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                    {{#if allproducts.show}}
                        <div class="col-xs-12 card-col-heading show-more-btn-container">
                            <a class="btn-showMore" href="{{allproducts.link}}" role="button"><span class="more">More Products</span><span class="less">Less Products</span></a>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
            <div class="row view-all-mobile-container text-center">
                <div class="col-lg-12">
                    <span class="show-more-brands center-block" role="button">View all</br><i class="informa-icon glyphicon glyphicon-plus-sign"></i></span>
                </div>
            </div>
        </div>
    </div>
</section>

