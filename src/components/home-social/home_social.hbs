<section id="social-section">
    <div class="container">
        <div class="col-lg-12">
            <h1>Keep up to date</h1>
        </div>
        <div class="col-lg-12">
            <div class="twitter-carousel" data-slider-dots="true" data-slider-infinite="true" data-slides-show="{{ItemsPerFrame}}" data-slides-scroll="{{ItemsPerFrame}}" data-speed="400" 
                data-autoplay-speed="4000" data-autoplay="false">
            	{{#each ReTweetUserList}}
	            	<div class="panel">
	            		<div class="feed">
	            			<p>{{createdAt}}</p>
	            			{{#if Image}}
	            				<div class="twit-img">
	            					<img src="{{Image}}" alt="{{ScreenName}}"/>
	            				</div>
	            			{{/if}}
	            			<p class="message">{{Message}}</p>
	            		</div>
	            	</div>
	            {{/each}}
            </div>
        </div>
    </div>
</section>