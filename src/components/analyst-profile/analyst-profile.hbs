<section id="analyst-profile">
	<div class="introduction clearfix">
		<div class="container">
			<div class="details">
				<h2>About <i>{{name}}</i></h2>
				<p class="place">{{place}}</p>
				<p class="experience">{{experience}}</p>
				<ul class="nav-links">
            		<li><a href="#" class="icon-twitter"></a></li>
            		<li><a href="#" class="icon-linked-in"></a></li>
            		<li><a href="#" class="icon-email"></a></li>
            	</ul>
			</div>
			<div class="image">
				<img src="{{image}}" alt="profile-1" />
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-6 analyst-content">
				<div class="descriptions">
					<p class="bold">{{highlight-content}}</p>
					<p>{{para1}} </p>
				</div>
				<div class="btn-container text-center">
					<a href="javascript:void(0);" class="show-options">
						<span class="more">Show More</span>
						<span class="less">Show Less</span>
					</a>
				</div>
			</div>
			<div class="col-xs-12 col-md-6 analyst-features">
				<div class="more-stories row">
					<div class="col-xs-12 col-sm-6 col-md-12">
						<p class="heading">Specialities</p>
						<ul class="feature bold">
							{{#each specialities}}
		                    	<li>{{name}}</li>
							{{/each}}
						</ul>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-12">
						<p class="heading"><i>Tore</i> writes for</p>
						<ul class="feature">
							{{#each writing}}
				               	<li><a href="#">{{name}}</a></li>
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>